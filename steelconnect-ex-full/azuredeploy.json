    "variables": {
        "directorAZ1Name": "[concat(parameters('directorNamePrefix'), '-1')]",
        "routerAZ1Name": "[concat(parameters('routerNamePrefix'), '-1')]",
        "controllerAZ1Name": "[concat(parameters('controllerNamePrefix'), '-1')]",
        "directorAZ1PublicIpAddressName": "[concat(variables('directorAZ1Name'), '-PublicIP' )]",
        "directorAZ1ManagementSubnetInterfaceName": "[concat(variables('directorAZ1Name'), '-MgmtInt')]",
        "directorAZ1DirectorSubnetInterfaceName": "[concat(variables('directorAZ1Name'), '-DirectorInt')]",
        "routerAZ1PublicIpAddressName": "[concat(variables('routerAZ1Name'), '-PublicIP' )]",
        "routerAZ1DirectorSubnetInterfaceName": "[concat(variables('routerAZ1Name'), '-DirectorInt')]",
        "routerAZ1ManagementSubnetInterfaceName": "[concat(variables('routerAZ1Name'), '-MgmtInt')]",
        "routerAZ1RouterSubnetInterfaceName": "[concat(variables('routerAZ1Name'), '-RouterInt')]",
        "controllerAZ1PublicIpAddressName": "[concat(variables('controllerAZ1Name'), '-PublicIP' )]",
        "controllerAZ1RouterSubnetInterfaceName": "[concat(variables('controllerAZ1Name'), '-RouterInt')]",
        "controllerAZ1ManagementSubnetInterfaceName": "[concat(variables('controllerAZ1Name'), '-MgmtInt')]",
        "controllerAZ1ControllerSubnetInterfaceName": "[concat(variables('controllerAZ1Name'), '-ControllerInt')]",
        "directorAZ1DnsLabelPrefix": "[toLower(concat('director-', uniqueString(resourceGroup().id)))]",
        "routerAZ1DnsLabelPrefix": "[toLower(concat('router-', uniqueString(resourceGroup().id)))]",
        "controllerAZ1DnsLabelPrefix": "[toLower(concat('controller-', uniqueString(resourceGroup().id)))]",
        "managementSubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('Management Subnet'))]",
        "directorSubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('Director Subnet'))]",
        "routerSubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('Router Subnet'))]",
        "controllerSubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('Controller Subnet'))]",
        "osDiskType": "Standard_LRS",
        "managementSubnetAddressPrefix": "10.1.1.0/24",
        "directorSubnetAddressPrefix": "10.1.2.0/24",
        "routerSubnetAddressPrefix": "10.1.3.0/24",
        "controllerSubnetAddressPrefix": "10.1.4.0/24",
        "vnetAddressPrefix": "10.1.0.0/16",
        "location": "[resourceGroup().location]",
        "AZ1Zone": "1",
        "networkSecurityGroupName": "[concat('SecGroupNet-', uniqueString(resourceGroup().id))]",
        "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
                "publicKeys": [
                    {
                        "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                        "keyData": "[parameters('adminPasswordOrKey')]"
                    }
                ]
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "[variables('directorAZ1ManagementSubnetInterfaceName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[resourceId('Microsoft.Network/publicIpAddresses/', variables('directorAZ1PublicIpAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('managementSubnetRef')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAddress": "10.1.1.20",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('directorAZ1PublicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('networkSecurityGroupName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "[variables('directorAZ1DirectorSubnetInterfaceName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig2",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAddress": "10.1.2.20",
                            "subnet": {
                                "id": "[variables('directorSubnetRef')]"
                            }

                        }
